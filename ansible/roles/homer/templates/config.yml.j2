{% set categories = [] %}
{% for app in apps %}
  {% if apps[app].category | length > 0 %}
    {% if apps[app].category not in categories %}
      {% set categories = categories.append(apps[app].category) %}
    {% endif %}
  {% endif %}
{% endfor %}

